<mvc:View controllerName="search.controller.login"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
        xmlns:form="sap.ui.layout.form">
          <Page id="idLoginPage1" title=" " showHeader="false" enableScrolling="false" class="backGround">  <!--Here BackGround is custom CSS defined in style.css -->
            <VBox id="idVBox1" class="w3-row w3-display-middle w3-card-1">      <!-- Here the w3-row,w3-Display-middle w3-card-1 are from CDN(W3Schools) mentioned in Index.html-->                           
                <Text id="idLogibnText" text="Flower Marchent Login" class="w3-xlarge animated fadeInUp font"/> <!--Here the w3-xlarge animated fadeInUp are from CDN and font from cusstom css-->
                <VBox id="idVBox2" class="w3-container w3-border  w3-round-xxlarge w3-margin-top w3-center w3-red">
                    <VBox id="idVBox3" class="w3-container w3-padding-10">
                        <Image id="idImage" class="w3-margin-top w3-margin-bottom" src="model/mockData/userLogin.png" /><!--Here we can upload the image from Local file-->
                    </VBox>
                    <VBox id="idVBox4" class="w3-container w3-padding-10">   
                        <form:SimpleForm id="idSF"> 
                            <Input id="idloginip1" value="Sridhar" placeholder="User name" class="w3-input w3-border-0 w3-round-large" />
                            <Input id="idloginip2" type="Password" value="mickle" placeholder="Password" class="w3-input w3-border-0 w3-round-large" />
                            <Button id="idloginBtn1" class="w3-btn w3-ripple w3-border-0 w3-round-large" text="Login" press="onLogin" width="50px"/>
                        </form:SimpleForm>
                    </VBox>
                </VBox>
            </VBox>
          </Page>
</mvc:View>          